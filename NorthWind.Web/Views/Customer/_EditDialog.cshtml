<div class="popup-dialog" id="edit-dialog">
    <input type="hidden" class="customer-id" />
    <table>
        <tbody>
            <tr>
                <td>Company Name:</td>
                <td><input type="text" class="company-name" /></td>
            </tr>
            <tr>
                <td>Contact Name:</td>
                <td><input type="text" class="contact-name" /></td>
            </tr>
            <tr>
                <td>Contact Title:</td>
                <td><input type="text" class="contact-title" /></td>
            </tr>
            <tr>
                <td>Address:</td>
                <td><textarea class="address"></textarea></td>
            </tr>
            <tr>
                <td>City:</td>
                <td><input type="text" class="city" /></td>
            </tr>
            <tr>
                <td>Region:</td>
                <td><input type="text" class="region" /></td>
            </tr>
            <tr>
                <td>Postal Code:</td>
                <td><input type="text" class="postal-code" /></td>
            </tr>
            <tr>
                <td>Country:</td>
                <td><input type="text" class="country" /></td>
            </tr>
            <tr>
                <td>Phone:</td>
                <td><input type="text" class="phone" /></td>
            </tr>
            <tr>
                <td>Fax:</td>
                <td><input type="text" class="fax" /></td>
            </tr>
        </tbody>
    </table>
    <button type="button">Update Customer</button>
    <a href="javascript:;" class="close-button" id="close-edit-button">Close Dialog</a>
</div>


